<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/send_post_background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/send_post_header_color">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send_post_close_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/cancel_action_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/send_post_title"
            android:textColor="@color/Black"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send_post_add_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/submit_action_button"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/ic_title_divider"
        android:scaleType="centerCrop"


        />
    
    
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:id="@+id/post_edittext"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/ic_title_divider"
        android:scaleType="centerCrop"


        />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/ic_title_divider"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"


        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/White">

       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:src="@drawable/ic_add_photo_treehole"
           android:layout_centerVertical="true"
           android:layout_marginLeft="10dp"
           android:clickable="true"
           android:id="@+id/take_post_pic_button"

           />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/ic_title_divider"
        android:scaleType="centerCrop"


        />

</LinearLayout>