    android:layout_width="60dp" android:layout_height="120dp" android:orientation="vertical"
    android:background="@drawable/tab_border">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/tab_img"
        android:background="@drawable/tab_border"/>
